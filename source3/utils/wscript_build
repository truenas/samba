smbstatus_source = 'status.c ../smbd/notify_msg.c'

if bld.CONFIG_GET("WITH_PROFILE"):
    smbstatus_source += ' status_profile.c'
else:
    smbstatus_source += ' status_profile_dummy.c'

bld.SAMBA3_BINARY('smbstatus',
                 source=smbstatus_source,
                 deps='''
                      talloc
                      smbconf
                      CMDLINE_S3
                      cmdline_contexts
                      smbd_base
                      LOCKING
                      PROFILE
                      CONN_TDB
