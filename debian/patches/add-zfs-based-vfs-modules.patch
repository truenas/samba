+	zfs_handle_t *zfsp = NULL;
+	char parent[ZFS_MAXPROPLEN] = {0};
+	char *target_ds = NULL;
+	struct dataset_list *ds_list = NULL;
+	TALLOC_CTX *tmp_ctx = talloc_new(mem_ctx);
+	if (tmp_ctx == NULL) {
+		errno = ENOMEM;
+		return -1;
