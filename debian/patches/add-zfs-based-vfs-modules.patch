+	slibzp_int->libzfsp = libzfsp;
+	talloc_set_destructor(slibzp_int, smblibzfs_handle_destructor);
+	slibzp_ext->sli = slibzp_int;
+	slibzp_ext->zcache = memcache_init(slibzp_ext, (1024 * 1024));
+	*smblibzfsp = slibzp_ext;
