+	struct smblibzfshandle *slibzp_ext = NULL;
+	slibzp_ext = talloc_zero(mem_ctx, struct smblibzfshandle);
+	if (slibzp_ext == NULL) {
+		errno = ENOMEM;
+		return -1;
