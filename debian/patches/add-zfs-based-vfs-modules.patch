+	zfs_handle_t *zfsp_int = NULL;
+	zfsp_int = get_zhandle_from_smbzhandle(zfsp_ext);
+	if (!zfsp_int) {
+		DBG_ERR("failed to get zhandle\n");
+		zfsp_ext->is_open = false;
+		return;
+	}
+	zfs_close(zfsp_int);
+	zfsp_int = NULL;
+	zfsp_ext->is_open = false;
+	return;
