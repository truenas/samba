+
+	if (ret != 0) {
+		DBG_ERR("Failed to initialize zfs: %s\n", strerror(errno));
+		return -1;
+	}
+
+	config->inclusions = lp_parm_string_list(SNUM(handle->conn), "shadow",
+						"include", empty_list);
+	config->exclusions = lp_parm_string_list(SNUM(handle->conn), "shadow",
+						 "exclude", empty_list);
